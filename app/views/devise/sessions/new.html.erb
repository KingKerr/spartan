<div class="signin-container">
</div>
<div class="form-signin">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.input :email, required: false, autofocus: true %>
  <%= f.input :password, required: false %>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <%= f.button :submit, "Sign-In", class: "fa fa-sign-in fa-2x btn btn-info" %>

  <%= link_to "Register", new_user_registration_path, class: "fa fa-sign-in fa-2x btn btn-success" %>

  <%= link_to "Forgot Password", edit_user_password_path, class: "fa fa-question-circle fa-2x btn btn-danger" %>
</div>
          <div class="facebook-oauth">
            <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn block btn-social btn-facebook fa fa-facebook-square fa-2x" %>
          </div>

          <div class="google-oauth">
            <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-block btn-social btn-google-plus fa fa-google fa-2x" %>
          </div>

          <div class="spotify-oauth">
            <%= link_to "Sign in with Spotify", user_omniauth_authorize_path(:spotify), class: "btn btn-block btn-social btn-spotify fa fa-spotify fa-2x" %>
          </div>

        <% end %>







</div>
