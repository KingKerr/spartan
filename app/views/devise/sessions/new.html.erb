<div class="jumbotron">
  <nav class="navbar navbar-inverse">
    <div class="container-text-center">
      <h1 class="col-md-12">Spartan</h1>
      <div class='navbar-header'>

          <button type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-  target='#bs-example-navbar-collapse-1'>
            <span class='sr-only'></span>
            <span class='icon-bar'></span>
            <span class='icon-bar'></span>
            <span class='icon-bar'></span>
          </button>
      </div>
    </div>
  </nav>
    <h2>Welcome</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col-md-6 col-md-offset-3">
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <div class="form-actions">
        <div class="btn-group">
          <%= f.button :submit, "Log-In", class: "fa fa-sign-in fa-2x btn btn-info" %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
      <div class="btn-group">
       <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn block btn-social btn-facebook fa fa-facebook-square fa-2x" %>
      </div>

      <div class="btn-group">
        <%= link_to "Sign in with Google", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-block btn-social btn-google-plus fa fa-google fa-2x" %>
      </div>

      <div class="btn-group">
        <%= link_to "Sign in with Spotify", user_omniauth_authorize_path(:spotify), class: "btn btn-block btn-social btn-spotify fa fa-spotify fa-2x" %>
      </div>
    </div>
  </div>

  <% end %>





</div>
